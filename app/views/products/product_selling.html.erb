
<form action="buy_product" method="post">
  <div class="container-fluid mt-4">
    <div class="row ml-1">
      <div class="col-md-3 mr-3">
        <div class="row">
          <div class="card bg-light w-100">
            <div class="card-body custdetails">
              <div class="text-center">Customer Details</div>
              <hr>
              <div class="row">
                <table class="table table-borderless mt-3">

                  <tbody>
                  <tr>
                    <td class="custdetails-info">First Name:</td>
                    <td><input type="text" value="<%= @result['customer_detail'].present? ? @result['customer_detail'][0].first_name : '' %>" class="form-control"></td>
                  </tr>
                  <tr>
                    <td class="custdetails-info">Last Name:</td>
                    <td><input type="text" value="<%= @result['customer_detail'].present? ? @result['customer_detail'][0].last_name : '' %>" class="form-control"></td>
                  </tr>
                  <tr>
                    <td class="custdetails-info">Address:</td>
                    <td><textarea class="form-control" value="<%= @result['customer_detail'].present? ? @result['customer_detail'][0].address : '' %>" style="height: 150px;"></textarea></td>
                  </tr>
                  <tr>
                    <td class="custdetails-info">Phone No:</td>
                    <td><input type="text" value="<%= @result['customer_detail'].present? ? @result['customer_detail'][0].phone : '' %>" class="form-control customer_number"></td>
                  </tr>
                  </tbody>

                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-7">
        <div class="row">
          <div class="card bg-light w-100">
            <div class="card-header">
              Buy Products
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-borderless text-center">
                  <thead>
                  <tr>
                    <td>Name</td>
                    <td>Weight</td>
                    <td>Quantity</td>
                    <td>Price</td>
                  </tr>
                  </thead>
                </table>
              </div>
              <div class="table-responsive order-table">
                <table class="table table-borderless">

                  <tbody>
                  <% if  @result['product'].present? %>
                    <% @result['product'].each_with_index  do |product,index| %>
                      <tr>
                        <td>
                          <input type="text" name="product_name[<%= index %>]" value="<%= product['product'].product_name %> " class="form-control">
                        </td>
                        <td>
                          <select  class="form-control sku_<%= index %> sku_detail" name="sku[<%= index %>]">
                            <option disabled selected>SKU</option>
                            <% product['product_detail'].each do |product_detail_val| %>
                              <option value="<%=product_detail_val.id %>"><%=product_detail_val.sku %></option>
                            <% end %>
                          </select>
                          <input type="hidden" value="<%= index %>">
                        </td>
                        <td >
                          <select   class="form-control qty qty_<%= index %>" name="qty[<%= index %>]" id="<%= index %>">
                            <option disabled selected>QTY</option>
                            <% (1..10).each do |val| %>
                              <option value="<%=val %>"><%=val %></option>
                            <% end %>
                          </select>
                        </td>
                        <td>
                          <input type="text" read_only="true" class="form-control price_<%= index %>" name="price[<%= index %>]">
                        </td>
                      </tr>
                    <% end %>
                  <% end %>

                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row ml-1 mt-2 mb-3">
      <div class="col-md-6 mr-3">
        <div class="row">
          <div class="card bg-light w-100 pb-4">
            <div class="card-body payment-tag-title">
              <div class="text-center">Select Payment Method</div>
              <div class="row justify-content-center mt-4">
                <div class="col-md-5 mr-3 payment-tag p-4">
                  <input type="radio" name="payment_type" value="1">
                  <span class="ml-3">
                                        Online Payment
                                    </span>
                </div>
                <div class="col-md-5 payment-tag p-4">
                  <input type="radio" name="payment_type" value="2">
                  <span class="ml-3">
                                        Cash On Delivery
                                    </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="row">
          <button class="btn btn-primary w-100 mb-2 p-5">
            Checkout
          </button>
        </div>
        <div class="row">
          <button class="btn btn-danger w-100 p-4">
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>


</form>
<script>
    <% if params['status'] == "3" %>
      alert("Create new Purchase Order");
    <% end %>
    $(".qty").change(function () {
        var id = $(this).attr("id");
        var sku = parseInt(
            $(".sku_" + id + " option:selected").text(),
            10
        );
        // console.log("*****"+id);
        // console.log("*****"+sku);
        var qty = parseInt($(this).val(), 10);
        var price = sku * qty;
        $(".price_" + id).val(price);
        (parseInt(price)||0) ? $(".price_" + id).val(price) : $(".price_" + id).val("0");

    });
    $(".sku_detail").change(function () {
        var id = $(this).next().val();
        var sku = parseInt(
            $(".sku_" + id + " option:selected").text(),
            10
        );
        var qty = parseInt($('.qty_'+id).val(), 10);
        var price = sku * qty;
        // console.log("*****"+id);
        // console.log("*****"+sku);
        // console.log("*****"+qty);
        // $(".price_" + id).val(price);
        (parseInt(price)||0) ? $(".price_" + id).val(price) : $(".price_" + id).val("0");

    });
</script>